<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.seoulit.account.operate.system.mapper.BoardMapper">




	<!--생성자 주입을 위한 코드 입니다.-->

	<resultMap id="CttBoardDto" type="kr.co.seoulit.account.operate.system.entity.BoardEntity">
		<constructor>
			<idArg column="Id" javaType="Integer"/>
			<arg column="title" javaType="String" />
			<arg column="contents" javaType="String"  />
			<arg column="written_by" javaType="String" />
			<arg column="update_by" javaType="String" />
			<arg column="write_date" javaType="Date" />
			<arg column="update_date_time" javaType="Date" />
			<arg column="delete_flag" javaType="String" />
		</constructor>
	</resultMap>


	<!--생성자로 필드를 초기화할때는 DB의 칼럼과 매핑되는 객체 필드 이름을 적어주지 않아도 됨. -->

	<select id="constBoardList"
			resultMap="CttBoardDto">
		<![CDATA[
		SELECT
			Id
			 ,title
			 ,contents
			 ,written_by
			 ,update_by
			 ,write_date
			 ,update_date_time
			 ,delete_flag
		FROM
			Board
		]]>
	</select>




	<!--Test succeed-->

	<insert id="insertBoard" parameterType="kr.co.seoulit.account.operate.system.entity.BoardEntity">
    <![CDATA[
		INSERT INTO board
		(

			id,
			TITLE,
			CONTENTS,
			written_by,
			write_date

		)
		VALUES
			(
				BOARD_SQ.NEXTVAL,
				#{title},
				#{contents},
				#{writtenBy},
				sysdate

			)
		]]>
    </insert>



	<!--Test succeed-->


	<update id="updateBoard" parameterType="kr.co.seoulit.account.operate.system.entity.BoardEntity">
    <![CDATA[
		UPDATE Board
		SET
			title = #{title},
			contents = #{contents},
			update_date_time=sysdate

		WHERE
			ID = #{id}
		]]>
    </update>




	<!--Test succeed-->

	<select id="selectBoardList"
			resultType="kr.co.seoulit.account.operate.system.entity.BoardEntity">
		<![CDATA[
		SELECT
			Id as id
			 ,title as title
			 ,contents as contents
			 ,written_by as writtenBy
			 ,update_by as  updateBy
			 ,write_date as writeDate
			 ,update_date_time as updateDateTime
		FROM
			Board
		order by id desc    --최근의 데이터를 최상단에 보여주기 위한 정렬
		]]>
	</select>





	<!--Test succeed-->

	<select id="selectBoardDetail"
			parameterType="String"
			resultType="kr.co.seoulit.account.operate.system.entity.BoardEntity">
		<![CDATA[
		SELECT
			Id as id
			 ,title as title
			 ,contents as contents
			 ,written_by as writtenBy
			 ,update_by as upDateBy
			 ,write_date as writeDate
			 ,update_date_time as updateDateTime

		FROM
			Board
		where ID=#{id}
		]]>
	</select>






	<!-- Test succeed-->

	<delete id="deleteBoard" parameterType="String">
		DELETE FROM Board
		WHERE  id=#{id}
	</delete>







</mapper>